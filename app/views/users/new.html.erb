<%= render '/layouts/header'%>
<h2>Sign Up:</h2>

<%= form_for @user, url: postsignup_url do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being created:</h4>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <label>Name: </label>
    <%= f.text_field :name, required: true %><br>
  <label>Password: </label>
    <%= f.password_field :password, required: true %><br>
  <label>Confirm Password: </label>
    <%= f.password_field :password_confirmation, required: true %><br>

  <%= f.submit %>

<% end%>