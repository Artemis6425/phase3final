<%= form_for(@run) do |f| %>
  <label>Game: </label>
  <%= f.collection_select :game_id, @allgames, :id, :name, include_blank: false %>
  <label>(NOTE: cannot be changed!)</label><br>
  <%= f.hidden_field :user_id, :value => session[:user_id] %>
  <label>Hour: </label>
  <%= f.number_field :hour, in: 0..23, step: 1 %><br>
  <label>Minute: </label>
  <%= f.number_field :minute, in: 0..59, step: 1 %><br>
  <label>Second: </label>
  <%= f.number_field :second, in: 0..59, step: 1 %>

  <%= f.submit %>

<% end%>